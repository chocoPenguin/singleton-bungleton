# Database Configuration
DATABASE_URL=sqlite:///./app.db

# AI Foundry Agent Configuration
# NOTE: AI Foundry Agent ID는 필수입니다
# Azure AI Foundry Studio에서 생성한 퀴즈 생성용 Agent ID를 입력하세요
# AGENT_ID 형식: asst_...
AI_FOUNDRY_AGENT_ID=your_quiz_generator_agent_id_here
AI_FOUNDRY_AGENT_ID_FEEDBACK=your_feedback_agent_id_here

# Environment (development, production)
ENVIRONMENT=development

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]